   [&Field code="OPN09",attribute= "label",value = "Daytime"]
   [&Field code="OPN04",attribute= "script",value = " "]
   
   [&Field code="OPN13",attribute= "visible",value = "Yes"] ** Evening
   [&Field code="OPN14",attribute= "visible",value = "Yes"] ** Mobile
   [&Field code="OPN15",attribute= "visible",value = "Yes"] ** Fax
   [&Field code="OPN03",attribute= "visible",value = "No"]  ** Pointer to COMM OP
   [&Field code="OPN07",attribute= "visible",value = "Yes"] ** Pointer to PRIV OP

[&EndIf]


